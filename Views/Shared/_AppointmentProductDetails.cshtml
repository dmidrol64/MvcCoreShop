@model List<CoreStoreMVC.Models.Product>

@if (Model.Count > 0)
{
    <table class="table table-striped" width="100%">
        <thead class="table-info text-center">
            <tr>
                <th style="width: 20%"></th>
                <th>
                    <label asp-for="@Model.FirstOrDefault().Name"></label>
                </th>
                <th>
                    <label asp-for="@Model.FirstOrDefault().Price"></label>
                </th>
                <th>
                    <label asp-for="@Model.FirstOrDefault().ShadeColor"></label>
                </th>
                <th>
                    <label asp-for="@Model.FirstOrDefault().ProductTypes.Name"></label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="p-5 text-center">
                    <td>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.Image" width="100%" style="margin: auto; display:block; border-radius: 5px; border: 1px solid #bbb9b9;" />
                        </a>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(x => item.Name)
                    </td>
                    <td class="align-middle">
                        @String.Format("{0:c}", item.Price)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(x => item.ShadeColor)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(x => item.ProductTypes.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger text-center">No items added to the shopping cart...</div>
}