@model List<CoreStoreMVC.Models.Product>

@{
    ViewData["Title"] = "Customer Home Page";
}

@if (TempData["SM"] != null)
{
    <div class="row text-center">
        <div class="col-12 alert alert-success">
            @TempData["SM"]
        </div>
    </div>
}

<div class="row mt-3">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="my-0 font-weight-bold text-info text-center text-uppercase">
                        @item.Name
                    </h6>
                </div>

                <div class="card-body">
                    <img src="@item.Image" class="card-img-top" style="height: 100%" alt="Product Image" />
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <h6 class="text-danger"><b>@String.Format("{0:c}", item.Price)</b></h6>
                        </div>
                        <a asp-action="Details" asp-controller="Home" class="btn btn-outline-info" asp-route-id="@item.Id">View Details</a>
                    </div>
                </div>

            </div>
        </div>
    }
</div>
